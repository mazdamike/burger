<header>
    <img src="/assets/img/hamburger_120.png" alt="a hamburger" />
    <h1>Eat-Da-Burger!</h1>
</header>
<form>
    <div class="form-group">
        <input type="text" id="burg" name="name"><br>
    </div>
    <div style="text-align: center;">
        <button type="submit" class="submit-button">Submit</button>
    </div>
</form>
<p class="instruct">Enter a burger you want to eat and click the "Submit" button.</p>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ol>


<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/devoured-block}}
    {{/if}}
  {{/each}}
</ol>